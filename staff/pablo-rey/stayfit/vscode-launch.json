{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "server:test:debug"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229
    },

    {
      "type": "node",
      "request": "launch",
      "name": "Debug ts-node",
      "runtimeArgs": ["-r", "ts-node/register"],
      "args": ["${workspaceFolder}/server/src/index.ts"],
      "cwd": "${workspaceFolder}/server/"
    }
  ]
}