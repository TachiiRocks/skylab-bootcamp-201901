extends ../index

block content
  .user
    h1 Your data #{name}!
    input(type="text", name="name" placeholder='Name' value=name)
    input(type="text", name="surname" placeholder='surname' value=surname)

    if historicCarts.length
      table
        tr  
          th #
          th date
          th amount
        each historicCart, i in historicCarts
          tr
            td= i+1
            td= moment(historicCart.payment.date).format('DD-MM-YYYY')
            td= historicCart.payment.amount
    else
      p no purchases yet
    